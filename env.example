# 环境配置示例（请复制为 .env 并修改为你的值）

# 运行环境：development / production / test
NODE_ENV=production

# 应用端口（容器内监听端口）
PORT=8888

# Web 登录认证（后台与主页登录）
AUTH_ENABLED=true
AUTH_PASSWORD=change_me_strong_password

# API 令牌（用于扣子插件调用 Bearer Token）
API_TOKEN=replace_with_a_long_random_token

# 会话与安全
SESSION_SECRET=replace_with_a_long_random_session_secret

# 数据库文件路径（容器内路径，不要改）
DB_PATH=./db/html-go.db

# 如需限制上传体积，按需调整（与反代限制保持一致）
# BODY_LIMIT_MB=15 